<?xml version="1.0" encoding="utf-8"?>




<ScrollView 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/darker_gray"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" 
   
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="351dp"
        android:orientation="vertical" 
       
        >

	        <LinearLayout
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:orientation="horizontal"
	           
         >

	            <EditText
	                android:id="@+id/ip"
	                android:layout_width="103dp"
	                android:layout_height="wrap_content"
	                android:layout_weight="0.07"
	                android:hint="IP:" />

	            <TextView
	                android:id="@+id/status"
	                android:layout_width="84dp"
	                android:layout_height="match_parent"
	                android:layout_weight="0.09"
	                android:gravity="center"
	                android:textAppearance="?android:attr/textAppearanceMedium"
	                android:ems="10"
	                android:hint="status" />

	        </LinearLayout>

	        <LinearLayout
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:layout_weight="7.68" >

	            <Button
	                android:id="@+id/open"
	                android:layout_width="102dp"
	                android:layout_height="wrap_content"
	                android:layout_marginTop="5.0dp"
	                android:text="CONNECT" />

	            <Button
	                android:id="@+id/start"
	                android:layout_width="102dp"
	                android:layout_height="wrap_content"
	                android:layout_marginTop="5.0dp"
	                android:text="start" />

	           <Button
	                android:id="@+id/comfrim"
	                android:layout_width="102dp"
	                android:layout_height="wrap_content"
	                android:layout_marginTop="5.0dp"
	                android:text="comfrim" />
	        </LinearLayout>

	    <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="5.0dp"
	        android:layout_weight="1.0" >

	        <TextView
	            android:id="@+id/TextView01"
	            android:layout_width="wrap_content"
	            android:layout_height="match_parent"
	            android:layout_weight="0.03"
	            android:text="car" />

	        <Button
	            android:id="@+id/Up"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_weight="0.03"
	            android:text="Up" />

	        <Button
	            android:id="@+id/Down"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_weight="0.03"
	            android:text="Down" />

	        <Button
	            android:id="@+id/Left"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_weight="0.03"
	            android:text="Left" />

	        <Button
	            android:id="@+id/Right"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_weight="0.03"
	            android:text="Right" />

	    </LinearLayout>
	
	    <LinearLayout 
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="5.0dp"
	        android:layout_weight="1.0">

	            <FrameLayout
	                android:layout_width="wrap_content"
	                android:layout_height="match_parent" >

	            </FrameLayout>

	            <TextView
	                android:id="@+id/textView2"
	                android:layout_width="wrap_content"
	                android:layout_height="match_parent"
	                android:text="camera" />

	            <Button
	                android:id="@+id/cUp"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_weight="0.03"
	                android:text="Up" />

	            <Button
	                android:id="@+id/cDown"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_weight="0.03"
	                android:text="Down" />

	            <Button
	                android:id="@+id/cRight"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_weight="0.03"
	                android:text="Right" />

	            <Button
	                android:id="@+id/cLeft"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_weight="0.03"
	                android:text="Left" />

	    </LinearLayout>
	    
	    
	    <LinearLayout 
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="5.0dp"
	        android:layout_weight="1.0">

	            <FrameLayout
	                android:layout_width="wrap_content"
	                android:layout_height="match_parent" >

	            </FrameLayout>

	            <TextView
	                android:id="@+id/lift"
	                android:layout_width="wrap_content"
	                android:layout_height="match_parent"
	                android:text="lift" />

	            <Button
	                android:id="@+id/liftUp"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_weight="0.03"
	                android:text="Up" />

	            <Button
	                android:id="@+id/liftDown"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_weight="0.03"
	                android:text="Down" />

	            <Button
	                android:id="@+id/pattern1"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_weight="0.03"
	                android:text="pattern1" />

	            <Button
	                android:id="@+id/pattern2"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_weight="0.03"
	                android:text="pattern2" />

	    </LinearLayout>
	    
	    
	      <LinearLayout 
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="5.0dp"
	        android:layout_weight="1.0">

	            <ImageView
	                android:id="@+id/image_view"
	                android:layout_width="match_parent"
	                android:layout_height="274dp"
	                android:src="@drawable/cuhk" />
	    
	      </LinearLayout>
	</LinearLayout>
</ScrollView>

